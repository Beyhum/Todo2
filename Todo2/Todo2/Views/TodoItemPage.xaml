<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo2.Views.TodoItemPage"
             Padding="10, 10, 10, 10"
             >
    <StackLayout>
        <Entry x:Name="titleEntry" Placeholder="Title"/>
        <Entry x:Name="notesEntry" Placeholder="Notes" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand"/>

        <Button x:Name="addButton" Text="Add" VerticalOptions="EndAndExpand" BackgroundColor="#2196F3" TextColor="White" />
    </StackLayout>
</ContentPage>